######### matrices
 matrix()
 ### crear la matriz
 
 x<-c(1:6)
 dim(x)<-c(2,3) ### dimension de las filas y columnas
 dim
 ## para ponerle nombre a las filas y columnas
 matriz1<- list(c("Fila 1","Fila 1"),c("Col 1","Col 2", "Col 3"))
 matriz1<-(matrix(1:12,ncol=3,byrow = TRUE,
          dimnames=list(letters[1:4],LETTERS[1:3])))
 matriz1
 matriz1[1,1]
 matriz1[,c(2,3)]

 
 ### funciones que son utiles para matrices
 
 #ncol... numero de columnas de x
 #nrow... numero de filas de x
 #t(x)... transpuesta de x
 #diag(x)... extrae diagonal de matriz o crea una matriz diagonal
 ### col(x)...crea una matriz con elemento ij igual al valor j
 ## row... crea una matriz con elemento ij igual al valor i
 #cbind.. combina secuebcuas de vectores/ matrices por columnas
 #rbind... combina secuencias de vectores/ matrices por renglones
 
 ##### ejemplo
 x<-matrix(1:6,2,3) ## generamos la matriz, cpn 2 renglones y tres olumnas
 x
 y<-matrix(1:6,3,2)
 y
 y[3,];y[3]#### con corchetes extraemos datos, el primer espacio se refiere a las columnas y despues de la coma a los renglones
 
 ncol(x);nrow(y)
 t(x)### trasnpuesta
 cbind(1,x)### es de columnas, 
 cbind(1:3,1:6)
 
